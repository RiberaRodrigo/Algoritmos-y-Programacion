# Algoritmos_y_Programacion
//librerias
#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string>
#include "stdlib.h"

using namespace std;

#define max 10

struct Matriz{
	char M[max][max];
};


void Cargar(Matriz Vec[], int n, string Cadena);
void Mostrar(Matriz Vec[], int n, string Cadena);

void main()
{
	int n;
	string Cadena;
	Matriz Vec[max];
	
	cout << "\n\n\n Ingrese la cadena de caracteres: ";
	getline(cin, Cadena);
	do{
		cout << "\n Ingrese el numero de elementos: ";
		cin >> n;
	}while(n<=0 || n>10);

	Cargar(Vec, n, Cadena);
	Mostrar(Vec, n, Cadena);

	getch();
}

void Cargar(Matriz Vec[], int n, string Cadena)
{
	int i, j, k, c=0;
	int longitud = Cadena.length();
	for(i=0; i < n; i++)
		for(j=0; j < n; j++)
			for(k=0; k < n; k++)
				{
					Vec[j].M[i][k] = Cadena[c];
					c++;
					if(c == longitud)
						c = 0;
				}
}


void Mostrar(Matriz Vec[], int n, string Cadena)
{
	int i, j, k;
	int longitud = Cadena.length();
	for(i=0; i < n; i++)
	{
		for(j=0; j < n; j++)
		{
			for(k=0; k < n; k++)
			{
				cout << "["<<j<<"].["<<i<<"]["<<k<<"]= " << Vec[i].M[j][k] <<"\t";
			}
			cout << endl;
		}
		cout << endl;
	}
}
